<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/WhiteColor"
    android:gravity="center"
    android:padding="30dp">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logo"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:src="@drawable/kokologo" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/mobileNumber"
        android:hint="@string/MobileNumberHint"
        android:textStyle="bold"
        android:textColor="@color/ColorPrimaryDark"
        android:numeric="integer"
        android:padding="20dp"
        android:maxLength="10"
        android:maxLines="1"
        android:focusable="false"
        android:editable="false"
        android:textColorHint="@color/ColorPrimaryDark" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textCapSentences|textAutoCorrect|textPostalAddress"
        android:ems="10"
        android:id="@+id/addressOne"
        android:padding="20dp"
        android:hint="@string/AddressOneHint"
        android:textColor="@color/ColorPrimaryDark"
        android:textStyle="bold"
        android:maxLength="50"
        android:maxLines="1"
        android:textColorHint="@color/ColorPrimaryDark" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textCapSentences|textAutoCorrect|textPostalAddress"
        android:ems="10"
        android:id="@+id/addressTwo"
        android:padding="20dp"
        android:textStyle="bold"
        android:textColor="@color/WhiteColor"
        android:hint="@string/AddressTwoHint"
        android:minLines="1"
        android:maxLength="30"
        android:maxLines="1"
        android:textColorHint="@color/ColorPrimaryDark" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/SubmitName"
        android:id="@+id/submitButton"
        android:background="@color/ColorPrimaryDark"
        android:layout_gravity="center"
        android:textColor="@color/WhiteColor"
        android:textStyle="bold"
        android:layout_marginTop="20dp" />
</LinearLayout>